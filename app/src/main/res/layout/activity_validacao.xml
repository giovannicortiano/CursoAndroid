<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="12dp"
    tools:context="com.whatsclone.giovanni.whatsclone.Activitys.ValidacaoActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/larguraLogo"
        android:layout_height="@dimen/alturaLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:password="false"
        android:text="Validação"
        android:textColor="@color/TextColorPrincipal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Você recebeu um código SMS para validação, digite o código de validação abaixo:"
        android:textColor="@color/TextColorPrincipal" />

    <EditText
        android:id="@+id/edtCodigoDigitadoId"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Digite o Còdigo."
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/TextColorPrincipal" />

    <Button
        android:id="@+id/btnValidarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtCodigoDigitadoId"
        android:layout_marginTop="37dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/ResourceValidar"
        android:textColor="@color/TextColorPrincipal" />
</RelativeLayout>
